<UserControl x:Class="NeuroApp.Screens.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:local="clr-namespace:NeuroApp.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Window_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="ClientesListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding name}" Width="150"/>
                    <GridViewColumn Header="Tipo" DisplayMemberBinding="{Binding type}" Width="100"/>
                    <GridViewColumn Header="Natureza" DisplayMemberBinding="{Binding nature}" Width="150"/>
                    <GridViewColumn Header="CNPJ/CPF" DisplayMemberBinding="{Binding cnpj}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>

        <wv2:WebView2 x:Name="ClienteWebView" Grid.Column="1"/>
    </Grid>
</UserControl>