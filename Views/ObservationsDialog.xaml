<Window x:Class="NeuroApp.Views.ObservationsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuroApp.Views"
        mc:Ignorable="d"
        Title="SCN" Height="245" Width="380"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Insira as observações:" 
                       FontWeight="DemiBold"
                       FontSize="18"
                       Margin="8 13 8 4" 
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="ObservationTextBox"
                     HorizontalAlignment="Center"
                     Margin="10"
                     MinLines="5" 
                     Width="320"
                     AcceptsReturn="True"
                     BorderBrush="Black"
                     BorderThickness="1"/>
            <Button x:Name="AddObservationButton"
                    Content="Adicionar"
                    Width="110"
                    HorizontalAlignment="Center"
                    Margin="5" Click="AddObservationButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
